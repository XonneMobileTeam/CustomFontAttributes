<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define the values for the attribute -->
    <attr name="typeface" format="enum">
        <enum name="normal" value="0"/>
        <enum name="bold" value="1"/>
    </attr>

    <!-- Tell Android that the class "PATTextView" can be styled,
         and which attributes it supports -->
    <declare-styleable name="CustomTextView">
        <attr name="typeface"/>
    </declare-styleable>

    <!-- Tell Android that the class "PATEditText" can be styled,
         and which attributes it supports -->
    <declare-styleable name="CustomEditText">
        <attr name="typeface"/>
    </declare-styleable>

    <!-- Tell Android that the class "PATButton" can be styled,
         and which attributes it supports -->
    <declare-styleable name="CustomButton">
        <attr name="typeface"/>
    </declare-styleable>

</resources>
